<h3>Liste des catégories</h3>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for category in categories %}
        <tr>
            <td>{{ category.id }}</td>
            <td>{{ category.name }}</td>
            <td>
                <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-warning" style="color: #FFF;">Modifier</a>
                {{ include('category/_delete_form.html.twig') }}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="3">Aucun résultat trouvé</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('category_new') }}" class="btn btn-success">Ajouter une catégorie</a>
