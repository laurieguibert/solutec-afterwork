<h3>Liste des templates</h3>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Object</th>
            <th>Body</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
    {% for template in templates %}
        <tr>
            <td>{{ template.id }}</td>
            <td>{{ template.name }}</td>
            <td>{{ template.object }}</td>
            <td>{{ template.body }}</td>
            <td>
                <a href="{{ path('template_show', {'id': template.id}) }}">show</a>
                <a href="{{ path('template_edit', {'id': template.id}) }}">edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="5">Aucun résultat trouvé</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('template_new') }}">Create new</a>