{% extends 'base.html.twig' %}

{% block title %}MailingList index{% endblock %}

{% block body %}
    <h1>MailingList index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mailing_list in mailing_lists %}
            <tr>
                <td>{{ mailing_list.id }}</td>
                <td>{{ mailing_list.name }}</td>
                <td>{{ mailing_list.createdAt ? mailing_list.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ mailing_list.updatedAt ? mailing_list.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('mailing_list_show', {'id': mailing_list.id}) }}">show</a>
                    <a href="{{ path('mailing_list_edit', {'id': mailing_list.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mailing_list_new') }}">Create new</a>
{% endblock %}
