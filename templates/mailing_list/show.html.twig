{% extends 'base.html.twig' %}

{% block title %}MailingList{% endblock %}

{% block body %}
    <h1>MailingList</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mailing_list.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ mailing_list.name }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ mailing_list.createdAt ? mailing_list.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ mailing_list.updatedAt ? mailing_list.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('mailing_list_index') }}">back to list</a>

    <a href="{{ path('mailing_list_edit', {'id': mailing_list.id}) }}">edit</a>

    {{ include('mailing_list/_delete_form.html.twig') }}
{% endblock %}
