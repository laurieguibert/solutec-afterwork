<h3>Liste des sites</h3>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom du site</th>
            <th>Adresse</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for site in sites %}
        <tr>
            <td>{{ site.id }}</td>
            <td>{{ site.name }}</td>
            <td>{{ site.address }}<br>{{ site.zipCode }} {{ site.city }}</td>
            <td>
                <a href="{{ path('site_show', {'id': site.id}) }}" class="btn btn-primary">Afficher</a>
                <a href="{{ path('site_edit', {'id': site.id}) }}" class="btn btn-warning" style="color: #FFF;">Modifier</a>
                {{ include('site/_delete_form.html.twig') }}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="6">Aucun résultat trouvé</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('site_new') }}" class="btn btn-success">Ajouter un site</a>
