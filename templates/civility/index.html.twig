<h3>Liste des civilités</h3>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Abréviation</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for civility in civilities %}
        <tr>
            <td>{{ civility.id }}</td>
            <td>{{ civility.name }}</td>
            <td>{{ civility.shortName }}</td>
            <td>
                <a href="{{ path('civility_edit', {'id': civility.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
                {{ include('civility/_delete_form.html.twig') }}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">Aucun résultat trouvé</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('civility_new') }}" class="btn btn-success btn-sm">Ajouter une civilité</a>
